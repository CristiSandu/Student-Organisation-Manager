                    <Label x:Name="DescriptionNrUser3" Text="Users" Style="{StaticResource MainTitleStyle}" FontSize="50" HorizontalOptions="Center" VerticalOptions="Center"/>
                </StackLayout>
                    </Frame>
            </StackLayout>

            <StackLayout Grid.Row="2" Grid.Column="1">
                <Frame Style="{StaticResource FrameAddNews}" Grid.Row="2" Grid.Column="1" CornerRadius="0">

                    <StackLayout Padding="0,0,0,10">
                        <Label x:Name="NrUser4" Text="80" Style="{StaticResource MainTitleStyle}" FontSize="60" HorizontalOptions="Center" VerticalOptions="Center"/>
                        <Label x:Name="DescriptionNrUser4" Text="Users" Style="{StaticResource MainTitleStyle}" FontSize="50" HorizontalOptions="Center" VerticalOptions="Center"/>
                    </StackLayout>
                </Frame>
            </StackLayout>

            <Image Source="mslearn.png" HeightRequest="150" VerticalOptions="Center" Grid.Row="3"  Grid.ColumnSpan="2" HorizontalOptions="Center" />

            <StackLayout Grid.Row="4" Grid.ColumnSpan="2" Orientation="Horizontal"  Padding="2,4,0,8">
                <ScrollView Orientation="Horizontal">
                    <StackLayout Orientation="Horizontal">
                        <Button x:Name="Filter1" Text="PATH"  Style="{StaticResource ButtonCheckedStyle}" Clicked="Filter1_Clicked"/>
                        <Button Grid.Column="1" x:Name="Filter2" Style="{StaticResource ButtonCheckedStyle}" Clicked="Filter1_Clicked"/>
                        <Button Grid.Column="2"  x:Name="Filter3" Style="{StaticResource ButtonCheckedStyle}" Clicked="Filter1_Clicked"/>
                        <Button Grid.Column="3"  x:Name="Filter4" Style="{StaticResource ButtonCheckedStyle}" Clicked="Filter1_Clicked"/>

