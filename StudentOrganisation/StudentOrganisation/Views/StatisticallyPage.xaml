                    <Label x:Name="NrUser" Text="80" Style="{StaticResource MainTitleStyle}" FontSize="60" HorizontalOptions="Center" VerticalOptions="Center"/>
                    <Label x:Name="DescriptionNrUser" Text="Users" Style="{StaticResource MainTitleStyle}" FontSize="50" HorizontalOptions="Center" VerticalOptions="Center"/>
                </StackLayout>
                </Frame>
            </StackLayout>

            <StackLayout Grid.Row ="1" Grid.Column="1" >
