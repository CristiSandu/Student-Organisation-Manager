<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="StudentOrganisation.MainPage">

    <StackLayout Spacing="10" Padding="10">
        
        <StackLayout>
            <Label Text="Nume" Style="{StaticResource TitleStyle}" HorizontalOptions="Start" TextColor="Black"/>
            <Label Text="{Binding Name}" FontSize="Medium" HorizontalOptions="Start" TextColor="Black"/>
        </StackLayout>
        <StackLayout>
            <Label Text="Prenume" Style="{StaticResource TitleStyle}" HorizontalOptions="Start" TextColor="Black"/>
            <Label Text="{Binding SecondName}" FontSize="Medium" HorizontalOptions="Start" TextColor="Black"/>
        </StackLayout>
        <StackLayout>
            <Label Text="Email" Style="{StaticResource TitleStyle}" HorizontalOptions="Start" TextColor="Black"/>
            <Label Text="{Binding Email}" FontSize="Medium" HorizontalOptions="Start" TextColor="Black"/>
        </StackLayout>
        <StackLayout>
            <Label Text="ID" Style="{StaticResource TitleStyle}" HorizontalOptions="Start" TextColor="Black"/>
            <Label x:Name="idUser" Text="{Binding Id}" TextColor="Black" FontSize="Medium"  HorizontalOptions="Start" VerticalOptions="Center"/>
        </StackLayout>
        <Button x:Name="singOut" Text="Sign out" Clicked="singOut_Clicked"/>
        <Button x:Name="getUSER" Text="GEt" Clicked="getUSER_Clicked"/>


    </StackLayout>

</ContentPage>
